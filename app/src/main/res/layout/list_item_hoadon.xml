<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="13dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/khung"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tenKH"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Tên KH"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtloa5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá vé:"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_giatien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:text="20000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    android:text="Time     : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="30"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="27dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtloa6"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:text="HTTT  : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_httt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="30"
                    android:textSize="20dp" />


            </LinearLayout>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:text="chưa thnah toán  : "
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_edit_24" />

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_delete" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>