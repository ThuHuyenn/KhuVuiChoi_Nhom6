<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"

    app:cardCornerRadius="13dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/khung"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lv_id"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Id"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtloa5"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:text="Tên "
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lv_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:text="20000"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    android:text="Pass   "
                    android:textSize="20dp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lv_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="30"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="27dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtloa6"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:text="SĐT "
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lv_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="30"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="27dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtloa7"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ "
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lv_diachi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="30"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="27dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtloa8"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:text="Email "
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="30"
                    android:textSize="20dp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="156dp"
            android:layout_height="165dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="156dp"
                android:layout_height="57dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_edit"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_edit_24" />

                <ImageView
                    android:id="@+id/btn_delete"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ic_delete" />


            </LinearLayout>


            <TextView
                android:id="@+id/id_status"
                android:layout_width="156dp"
                android:layout_height="47dp"
                android:text="Đang hoạt động"
                android:gravity="center"
                android:textColor="#F46565"
                android:textSize="13dp" />
        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>